@model Progetto_MVC_CORE_ENTITY.Models.Camera

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Camera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            if (TempData["error"] != null)
            {
                <div class="alert alert-danger" id="error-alert">
                    <span>@TempData["error"]</span>
                </div>

            }
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCamera" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoCamera" class="control-label"></label>
                <select asp-for="IdTipoCamera" class="form-control" asp-items="ViewBag.IdTipoCamera"></select>
                <span asp-validation-for="IdTipoCamera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponibile" /> @Html.DisplayNameFor(model => model.Disponibile)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        window.addEventListener("DOMContentLoaded", () => {
            let errorAlert = document.getElementById('error-alert');
            if (errorAlert) {
                setTimeout(() => {
                    errorAlert.style.display = 'none';
                }, 3000);
            }
        })

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
